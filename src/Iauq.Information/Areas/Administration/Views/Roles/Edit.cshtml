@using Iauq.Web.Mvc.UI
@model Iauq.Core.Domain.Role

@{
    ViewBag.Title = string.Format("پنل مدیریت - نقش‌ها - ویرایش نقش: {0}", Model.Name);
    PagePartManager.Current.AddBreadcrumb(Html.ActionLink("پنل مدیریت", "Default", "Administration"));
    PagePartManager.Current.AddBreadcrumb(Html.ActionLink("نقش‌ها", "List", "Roles",new{page=1},null));
    PagePartManager.Current.AddBreadcrumb(Html.ActionLink(string.Format("ویرایش نقش: {0}", Model.Name), "Edit", "Roles", new { Model.Id }));
}

<div class="rounded-box newest row-fluid">
    <div class="inside">
        <h1>@ViewBag.Title
        </h1>
        <hr />
        @using (Html.BeginForm("Edit", "Roles", new {Model.Id}, FormMethod.Post, new {@class = "form-horizontal"}))
        {
            <input type="hidden" name="id" value="@Model.Id" />
            @Html.ValidationSummary(true)
            <fieldset>
                @{ Html.RenderPartial("_NewOrUpdate", Model); }
                <div class="form-actions">
                    <button type="submit" class="btn btn-success">بروز رسانی</button>
                    @Html.ActionLink("برگشت", "List", new { page = 1 }, new { @class = "btn" })
                </div>
            </fieldset>
        }
    </div>
</div>