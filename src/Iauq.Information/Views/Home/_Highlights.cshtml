@model MvcContrib.Pagination.IPagination<Iauq.Core.Domain.Content>
<div class="span7 no-right-margin pull-right">
    <div class="rounded-box highlights row-fluid tabbable">
        <ul class="nav nav-tabs head">
            <li class="active"><a href="#tab1" data-toggle="tab">
                                   <h1>
                                       اخبار</h1>
                               </a></li>
            <li><a href="#tab2" data-toggle="tab">
                    <h1>
                        رخدادهاي پيشرو</h1>
                </a></li>
            <li><a href="#tab3" data-toggle="tab">
                    <h1>
                        تقویم آموزشی</h1>
                </a></li>
        </ul>
        <div class="inside">
            <div class="tab-content span12 pull-right">
                <div class="tab-pane active" id="tab1">
                    @{ Html.RenderAction("Archive", "News"); }
                    <div class="clearfix">
                    </div>
                </div>
                <div class="tab-pane" id="tab2">
                    @{ Html.RenderAction("Archive", "Events"); }
                    <div class="clearfix">
                    </div>
                </div>
                <div class="tab-pane" id="tab3">
                    @Html.Action("Archive", "Calendars")
                    <div class="clearfix">
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <hr class="hidden-small-phone"/>
    <div class="rounded-box highlights row-fluid hidden-small-phone">
        <div class="inside">
            <h1>
                موضوعات برجسته
                <div id="highlights-buttons" class="btn-group nav pull-left">
                    <button class="btn prev">
                        <i class="icon-chevron-left"></i>قبلی</button>
                    <button class="btn next">
                        بعدی <i class="icon-chevron-right"></i>
                    </button>
                </div>
            </h1>
            <hr />
            @{ Html.RenderPartial("_Topic", Model); }
            <div data-dummy="true" class="clearfix">
            </div>
            <div class="box-footer single">
                @Html.RouteLink("لیست کامل موضوعات برجسته", "Highlights", new {page = 1}, new {@class = "btn"})
            </div>
        </div>
    </div>
</div>