@using Iauq.Information.App_GlobalResources
@model Iauq.Core.Domain.Poll
<div id="poll">
    <div class="well tags">
        @*<h4 class="nav-title">
            <i class="icon-signal"></i>نظرسنجی
        </h4>
        <div class="clearfix"></div>*@
        <ul class="nav nav-list">
            @if (Model == null)
            {
                <li class="btn-toolbar tags-container">
                    <p class="center">
                        @ValidationResources.NoPollFoundForVoting
                    </p>
                </li>
            }
            else if (ViewBag.ShowResults != null || ViewBag.IsAlreadyVoted != null)
            {
                @Html.Partial("ShowPollResults", Model)
            }
            else
            {
                @Html.Partial("VotePoll", Model)
            }
            <div class="clearfix">
            </div>
        </ul>
            <div class="clearfix">
            </div>
    </div>
            <div class="clearfix">
            </div>
</div>